# Cydebe Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# OpenAI API Configuration (for backend-api)
OPENAI_API_KEY=your_openai_api_key_here

# Jitsi Meet Configuration
JITSI_DOMAIN=meet.jit.si
JITSI_ROOM_PREFIX=cydebe_

# Backend API URLs
API_BASE_URL=https://your-vercel-app.vercel.app
BACKEND_API_URL=https://your-backend-api.vercel.app
BACKEND_LOCAL_NETWORK_URL=https://your-local-network-backend.vercel.app
BACKEND_LOCAL_DEVICE_URL=https://your-local-device-backend.vercel.app

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here
MIXPANEL_TOKEN=your_mixpanel_token_here

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-vercel-app.vercel.app

# Database (if needed for future features)
DATABASE_URL=your_database_url_here

# Email (for contact forms)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASS=your_email_password

# File Upload (if needed)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Redis (for caching, optional)
REDIS_URL=your_redis_url_here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_JITSI=true
ENABLE_OPENAI=true
ENABLE_LOCAL_BACKENDS=true
