# Production Environment Variables for Frontend
# Copy this file to .env.local for production deployment

# Backend URLs
NEXT_PUBLIC_API_BASE_URL=https://api.cydebe.com
NEXT_PUBLIC_LOCAL_NETWORK_URL=https://network.cydebe.com
NEXT_PUBLIC_LOCAL_DEVICE_URL=https://device.cydebe.com

# External Services
OPENAI_API_KEY=your_production_openai_key_here
JITSI_DOMAIN=meet.jit.si
JITSI_APP_ID=your_jitsi_app_id

# Application Settings
NEXT_PUBLIC_APP_NAME=Cydebe
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,ru,es,fr,de

# Analytics
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_GA_TRACKING_ID=your_ga_tracking_id
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_CSP_REPORT_URI=https://cydebe.report-uri.com/r/d/csp/enforce

# Production Settings
NODE_ENV=production
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_ENVIRONMENT=production

# Marketing Site URL
NEXT_PUBLIC_MARKETING_URL=https://www.cydebe.com
